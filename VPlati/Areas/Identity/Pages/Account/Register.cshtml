@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Registracija</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Ustvari nov uporabniški račun</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Ime"></label>
                <input asp-for="Input.Ime" class="form-control" />
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Priimek"></label>
                <input asp-for="Input.Priimek" class="form-control" />
                <span asp-validation-for="Input.Priimek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DatumRojstva"></label>
                <input asp-for="Input.DatumRojstva" class="form-control" />
                <span asp-validation-for="Input.DatumRojstva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.OMeni"></label>
                <textarea asp-for="Input.OMeni" class="form-control" placeholder="Tukaj napišite nekaj o sebi..." rows="4"></textarea>
                <span asp-validation-for="Input.OMeni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="submit" class="btn btn-primary">Registriraj</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
